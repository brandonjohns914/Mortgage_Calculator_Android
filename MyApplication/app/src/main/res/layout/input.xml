<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/inputFragmentInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/homevaluelabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Value:"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/homevalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="($)"
                    android:inputType="number"
                    android:importantForAutofill="no" />

                <TextView
                    android:id="@+id/downpaylabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Down Payment:"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/downpayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="($)"
                    android:inputType="number"
                    android:importantForAutofill="no" />

                <TextView
                    android:id="@+id/aprlabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APR:"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/apr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="(%)"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Property Tax:"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/proptaxrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="(%)"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/termslabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms:"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/year15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15" />

                    <RadioButton
                        android:id="@+id/year20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20" />

                    <RadioButton
                        android:id="@+id/year25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25" />

                    <RadioButton
                        android:id="@+id/year30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30" />

                    <RadioButton
                        android:id="@+id/year40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40" />
                </RadioGroup>

                <Button
                    android:id="@+id/butCalc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculate" />

                <Button
                    android:id="@+id/butReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>